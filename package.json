{
    "name": "secure-store",
    "version": "1.0.0",
    "description": "A safe store",
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "prettier": "prettier --write .",
        "build:ext": "cd extension && npm run build:chrome",
        "dev:ext": "cd extension && npm run dev:chrome",
        "dev:server": "cd backend && air",
        "build:server": "cd backend && go build -o dist/main src/main.go",
        "build:server:linux": "GOOS=linux GOARCH=amd64 go build -o dist/main-linux src/main.go",
        "start:server": "cd backend && go run src/main.go",
        "lint:ext": "cd extension && npm run lint",
        "pre-commit": "npm run lint:ext",
        "prepare": "husky install"
    },
